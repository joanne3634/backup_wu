<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!--start_t_set_homepage-->
		
		     <form name="tsetHomepage">
		     	<field property="homePageId" depends="digits">
					<arg position="0" key="tsetHomepage.homePageId" />
				</field>
			 	<field property="code_num" depends="required,maxlength">	
		         <arg position="0" key="tsetHomepage.code_num" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>30</var-value>
				 </var>
		        </field>
			 	<field property="rdesc_name" depends="required,maxlength">	
		         <arg position="0" key="tsetHomepage.rdesc_name" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>150</var-value>
				 </var>
		        </field>
			 	<field property="isVisiable" depends="required,maxlength">	
		         <arg position="0" key="tsetHomepage.isVisiable" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>3</var-value>
				 </var>
		        </field>
			 	<field property="records" depends="required,digits,maxlength">	
		         <arg position="0" key="tsetHomepage.records" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				 </var>
		        </field>
			 	<field property="sortID" depends="maxlength">	
		         <arg position="0" key="tsetHomepage.sortID" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				 </var>
		        </field>
			 	<field property="alignID" depends="required,maxlength">	
		         <arg position="0" key="tsetHomepage.alignID" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				 </var>
		        </field>
			 </form>
		<!--end_t_set_homepage-->
</formset>
</form-validation>
 

 
