<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!--start_t_settings_email-->
		
		     <form name="tsettingsEmail">
		     	<field property="emailId" depends="digits">
					<arg position="0" key="tsettingsEmail.emailId" />
				</field>
			 	<field property="smtpSer" depends="required,maxlength">	
		         <arg position="0" key="tsettingsEmail.smtpSer" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				 </var>
		        </field>
			 	<field property="portId" depends="required,maxlength">	
		         <arg position="0" key="tsettingsEmail.portId" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>20</var-value>
				 </var>
		        </field>
			 	<field property="email" depends="required,maxlength">	
		         <arg position="0" key="tsettingsEmail.email" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>150</var-value>
				 </var>
		        </field>
			 	<field property="pwd" depends="required,maxlength">	
		         <arg position="0" key="tsettingsEmail.pwd" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				 </var>
		        </field>
			 	<field property="senderName" depends="required,maxlength">	
		         <arg position="0" key="tsettingsEmail.senderName" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>50</var-value>
				 </var>
		        </field>
			 </form>
		<!--end_t_settings_email-->
</formset>
</form-validation>
 

 
