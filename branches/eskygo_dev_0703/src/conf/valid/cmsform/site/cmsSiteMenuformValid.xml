<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!--start_cms_site_menu-->
		
		     <form name="cmsSiteMenu">
		     	<field property="siteMenuId" depends="digits">
					<arg position="0" key="cmsSiteMenu.siteMenuId" />
				</field>
			 	<field property="siteConfigId" depends="">	
		         <arg position="0" key="cmsSiteMenu.siteConfigId" />		        
		        </field>
			 	<field property="menuSupId" depends="">	
		         <arg position="0" key="cmsSiteMenu.menuSupId" />		        
		        </field>
			 	<field property="menuPath" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuPath" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>2000</var-value>
				 </var>
		        </field>
			 	<field property="menuName" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuName" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>500</var-value>
				 </var>
		        </field>
			 	<field property="menuFilePath" depends="maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuFilePath" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="menuTemplet" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuTemplet" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="menuContentTemplet" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuContentTemplet" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="menuSort" depends="digits,maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuSort" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				 </var>
		        </field>
			 	<field property="menuUrl" depends="maxlength">	
		         <arg position="0" key="cmsSiteMenu.menuUrl" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 </form>
		<!--end_cms_site_menu-->
</formset>
</form-validation>
 

 
