<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!--start_cms_site_config-->
		
		     <form name="cmsSiteConfig">
		     	<field property="siteConfigId" depends="digits">
					<arg position="0" key="cmsSiteConfig.siteConfigId" />
				</field>
			 	<field property="siteName" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteConfig.siteName" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="siteCode" depends="required,maxlength">	
		         <arg position="0" key="cmsSiteConfig.siteCode" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="siteOwner" depends="maxlength">	
		         <arg position="0" key="cmsSiteConfig.siteOwner" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="siteHomeUrl" depends="maxlength">	
		         <arg position="0" key="cmsSiteConfig.siteHomeUrl" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>200</var-value>
				 </var>
		        </field>
			 	<field property="siteMetaInfo" depends="maxlength">	
		         <arg position="0" key="cmsSiteConfig.siteMetaInfo" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>2000</var-value>
				 </var>
		        </field>
		      </form>
		<!--end_cms_site_config-->
</formset>
</form-validation>
 

 
