<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!--start_t_area-->
		
		     <form name="tarea">
		     	<field property="areaId" depends="digits">
					<arg position="0" key="tarea.areaId" />
				</field>
			 	<field property="areaName" depends="required,maxlength">	
		         <arg position="0" key="tarea.areaName" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>30</var-value>
				 </var>
		        </field>
			 	<field property="helpCode" depends="required,maxlength">	
		         <arg position="0" key="tarea.helpCode" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>30</var-value>
				 </var>
		        </field>
			 	<field property="parentId" depends="required">	
		         <arg position="0" key="tarea.parentId" />		        
		        </field>
			 	<field property="nodeLevel" depends="required,maxlength">	
		         <arg position="0" key="tarea.nodeLevel" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				 </var>
		        </field>
			 	<field property="orderCode" depends="required,digits,maxlength">	
		         <arg position="0" key="tarea.orderCode" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>30</var-value>
				 </var>
		        </field>
			 	<field property="areaZip" depends="required,zipCode,maxlength">	
		         <arg position="0" key="tarea.areaZip" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>6</var-value>
				 </var>
		        </field>
			 	<field property="areaCode" depends="required,digits,maxlength">	
		         <arg position="0" key="tarea.areaCode" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>4</var-value>
				 </var>
		        </field>
			 	<field property="isRecommended" depends="required,maxlength">	
		         <arg position="0" key="tarea.isRecommended" />		        
		         <arg position="1" name="maxlength" key="${var:maxlength}" resource="false" />
				 <var>
					<var-name>maxlength</var-name>
					<var-value>3</var-value>
				 </var>
		        </field>
			 </form>
		<!--end_t_area-->
</formset>
</form-validation>
 

 
